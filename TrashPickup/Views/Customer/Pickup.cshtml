@model TrashPickup.Models.DaysOfTheWeekModel
@{
    ViewBag.Title = "Pickup";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
@using (Html.BeginForm("Pickup", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

<p>Pick the day you want to schedule your regular weekly pickup.</p>

<div class="form-group">
    @Html.LabelFor(model => model.DayKey, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.Id, new SelectList(Model.Days, "Id", "Day"), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>
</div>

<p>Pick what day you want trash to be picked up next.</p>

    <div class="form-group">
        @Html.LabelFor(model => model.DayKey, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.DayKey, new SelectList(Model.Days, "Id", "Day"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DayKey, "", new { @class = "text-danger" })
        </div>
    </div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-default" value="Submit" />
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model TrashPickup.Models.EmployeeSearchZip
@{

    ViewBag.Title = "Index";
}
<h2>Home</h2>
@using (Html.BeginForm("EmployeePickup", "Employee", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ZipCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control" })
        </div>
    </div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-default" value="Find Pickups" />
    </div>
</div>
}